{
    "branches": [
        "main"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "feat!",
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "fix!",
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "rc",
                        "release": "prerelease"
                    }
                ]
            }
        ],
        "@semantic-release/release-notes-generator",
        "@semantic-release/changelog",
        "@semantic-release/git"
    ]
}